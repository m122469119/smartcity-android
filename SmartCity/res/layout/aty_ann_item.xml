<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal" android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/frame_ann_items">

        <ImageView
            android:id="@+id/ann_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/ann_title"
                android:id="@+id/ann_title"
                android:layout_weight="5"
                android:textSize="20sp"
                android:gravity="bottom"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/ann_text"
                android:id="@+id/ann_text"
                android:layout_weight="3"
                android:textSize="12sp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_note"
                android:id="@+id/ann_note"
                android:layout_weight="2"
                android:textSize="12sp"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/ann_goto_btn"
            android:src="@drawable/right_arrow"
            android:background="#00000000"
            android:layout_weight="0.5" />
    </LinearLayout>

</LinearLayout>