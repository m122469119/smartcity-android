<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffe2e2e2"
        android:layout_weight="7">

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:src="@drawable/left_arrow"
            android:background="#00000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/org_relationship"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="25dp" />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#000000"  />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ann_title"
                android:id="@+id/textView39"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ann_text"
                android:id="@+id/textView40"
                android:paddingLeft="10dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_time"
                android:id="@+id/textView41"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:textSize="15dp"
                android:paddingBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/frame_ann_items">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/org_rel_name"
                android:id="@+id/textView1"
                android:gravity="center_vertical"
                android:layout_marginLeft="20sp"
                android:layout_gravity="bottom"
                android:layout_marginRight="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#000000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/org_rel_date"
                android:id="@+id/textView2"
                android:gravity="center_vertical"
                android:layout_marginLeft="20sp"
                android:layout_gravity="bottom"
                android:layout_marginRight="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#ff1c1c1c"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/org_rel_type"
                android:id="@+id/textView3"
                android:gravity="center_vertical"
                android:layout_marginLeft="20sp"
                android:layout_gravity="bottom"
                android:layout_marginRight="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#ff1c1c1c"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/org_rel_destination"
                android:id="@+id/textView4"
                android:gravity="center_vertical"
                android:layout_marginLeft="20sp"
                android:layout_gravity="bottom"
                android:layout_marginRight="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#ff1c1c1c"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/org_rel_code"
                android:id="@+id/textView5"
                android:gravity="center_vertical"
                android:layout_marginLeft="20sp"
                android:layout_gravity="bottom"
                android:layout_marginRight="20sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#000000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/org_rel_com"
                android:id="@+id/textView6"
                android:gravity="center_vertical"
                android:layout_marginLeft="20sp"
                android:layout_gravity="bottom"
                android:layout_marginRight="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#ff1c1c1c"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/commit_info"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</LinearLayout>