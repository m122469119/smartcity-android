<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffe2e2e2"
        android:layout_weight="7">

        <ImageButton android:id="@+id/ibtn_newpost_back"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:src="@drawable/left_arrow"
            android:background="#00000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="发布新帖"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="25dp" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <EditText android:id="@+id/et_new_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:hint=" 帖子标题"
            android:textSize="20dp"
            android:padding="3dp"
            android:background="@drawable/corner_pub_ann"
            android:layout_margin="4dp" />

        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_weight="1"-->
            <!--android:hint=" 帖子类型"-->
            <!--android:textSize="20dp"-->
            <!--android:background="@drawable/corner_pub_ann"-->
            <!--android:layout_margin="4dp" />-->

        <EditText android:id="@+id/et_new_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:hint="帖子正文"
            android:textSize="20dp"
            android:gravity="left"
            android:padding="8dp"
            android:background="@drawable/corner_pub_ann"
            android:layout_margin="4dp" />

        <!--<LinearLayout-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1">-->
            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:text="@string/upload_pic"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_margin="5dp"-->
                <!--android:textSize="20dp" />-->
        <!--</LinearLayout>-->

        <Button android:id="@+id/btn_new_post_publish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="发布帖子"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>